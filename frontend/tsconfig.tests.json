    "src/components/StreamTranscriptionPanel.test.ts",
    "src/utils/playback.ts",
    "src/utils/playback.test.ts",
    "src/hooks/useTranscriptions.ts",
    "src/hooks/useTranscriptions.test.ts",
    "src/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "dist-tests"]
}
